@model List<WebProj.Models.PharmacyMedicineSupply>

@{
    ViewData["Title"] = "PostPharmacySupply";
    var flag = 0;
    var message = "No demand count given for any medicine";
}

<h1>PostPharmacySupply</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Pharmacy Name
            </th>
            <th>
                Medicine Name
            </th>
            <th>
                Supply Count
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            @foreach (var x in item.medicineSupplyCount)
            {

                @if (x.supplyCount != 0)
                {
                    <tr>
                        <td>@item.pharmacyName</td>
                        <td>@x.medicineName</td>
                        <td>@x.supplyCount</td>
                    </tr>
                }
                else
                {
                    flag = flag + 1;

                }
            }
            @if (flag == item.medicineSupplyCount.Count())
            {
                flag = -1;
                break;
            }
        }
    </tbody>
</table>
<div>
    @if (flag == -1)
    {
        @message
    }
</div>
<div class="form-group text-center">
    <input type="button" value="Back" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Home")'" />
</div>
